--- !yamlscript/v0

test-steps =::
  - uses: actions/checkout@v4
  - run: cpanm App::cpm
  - run: cpm install -g --show-build-log-on-failure
  - run: yath test --qvf

job-config =::
  debian:
    init: |
      apt-get update -y
      apt-get install -y zsh curl build-essential man-db perl cpanminus libssl-dev zlib1g-dev libio-socket-ssl-perl libpng-dev libexpat1-dev

  ubuntu:
    init: |
      yes | unminimize
      apt-get update -y
      apt-get install -y zsh curl build-essential man-db perl cpanminus libssl-dev zlib1g-dev libio-socket-ssl-perl libpng-dev libexpat1-dev

defn gen-container-job(config image=nil)::
  runs-on: ubuntu-latest
  container:
    image:: image
  steps:
    - run:: config.init
    - :: test-steps

--- !yamlscript/v0:
name: Unit Test

on:
  push:

jobs:
  debian:: gen-container-job(job-config.debian, 'debian:latest')
  ubuntu:: gen-container-job(job-config.ubuntu, 'ubuntu:latest')
